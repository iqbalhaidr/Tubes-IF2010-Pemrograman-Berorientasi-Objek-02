<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="740.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.labpro.uiControl.PengirimanView">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10" layoutX="15" layoutY="15">
            <Label text="Manajemen Pengiriman" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
        <TableView fx:id="kurirTable" layoutX="14.0" layoutY="92.0" prefHeight="321.0" >
            <columns>
                <TableColumn fx:id="idPengiriman" prefWidth="98.0" text="ID Pengiriman" />
                <TableColumn fx:id="namaKurir" prefWidth="89.0" text="Nama Kurir" />
                <TableColumn fx:id="alamat" prefWidth="279.0" text="Tujuan" />
                <TableColumn fx:id="tipe" prefWidth="133.0" text="Tipe" />
                <TableColumn fx:id="status" prefWidth="169.3333740234375" text="Status" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <Pagination fx:id="pagination" layoutX="328.0" layoutY="492.0" prefHeight="50.0" prefWidth="200.0" />
        <TextField fx:id="searchField" layoutX="14.0" layoutY="56.0" text="Cari" />
        <Button layoutX="173.0" layoutY="56.0" mnemonicParsing="false" onAction="#handleSearchButton" text="Search" />
        <Button layoutX="233.0" layoutY="56.0" mnemonicParsing="false" onAction="#handleClearSearch" prefHeight="26.0" prefWidth="52.0" text="Clear" />
      <ToggleButton fx:id="btnDomestik" layoutX="294.0" layoutY="56.0" mnemonicParsing="false" onAction="#handleDomestik" text="Domestik">
         <toggleGroup>
            <ToggleGroup fx:id="filterGroup" />
         </toggleGroup></ToggleButton>
      <ToggleButton fx:id="btnInternasional" layoutX="366.0" layoutY="56.0" mnemonicParsing="false" onAction="#handleInternasional" text="Internasional" toggleGroup="$filterGroup" />
      <ToggleButton fx:id="btnSemua" layoutX="457.0" layoutY="56.0" mnemonicParsing="false" onAction="#handleSemua" text="Semua" toggleGroup="$filterGroup" />
      <ComboBox fx:id="statusFilter" layoutX="520.0" layoutY="56.0" onAction="#handleStatusFilter" prefWidth="150.0" />
    </children>
</AnchorPane>
