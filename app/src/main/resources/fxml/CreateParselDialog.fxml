    <children>
        <VBox layoutX="20.0" layoutY="20.0" prefHeight="360.0" prefWidth="310.0" spacing="15.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tambah Parsel Baru" textAlignment="CENTER">
                    <font>
                        <Font name="Comic Sans MS Bold" size="18.0" />
                    </font>
                </Text>

                <VBox spacing="5.0">
                    <children>
                        <Label text="Dimensi (cm):" />
                        <HBox spacing="10.0">
                            <children>
                                <VBox spacing="3.0">
                                    <children>
                                        <Label text="Panjang:" />
                                        <TextField fx:id="panjangField" prefWidth="80.0" promptText="cm" />
                                    </children>
                                </VBox>
                                <VBox spacing="3.0">
                                    <children>
                                        <Label text="Lebar:" />
                                        <TextField fx:id="lebarField" prefWidth="80.0" promptText="cm" />
                                    </children>
                                </VBox>
                                <VBox spacing="3.0">
                                    <children>
                                        <Label text="Tinggi:" />
                                        <TextField fx:id="tinggiField" prefWidth="80.0" promptText="cm" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox spacing="5.0">
                    <children>
                        <Label text="Berat (kg):" />
                        <TextField fx:id="beratField" prefWidth="150.0" promptText="Masukkan berat dalam kg" />
                    </children>
                </VBox>

                <VBox spacing="5.0">
                    <children>
                        <Label text="Jenis Barang:" />
                        <TextField fx:id="jenisBarangField" prefWidth="250.0" promptText="Masukkan jenis barang" />
                    </children>
