<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.labpro.uiControl.ManajemenParselDashboardController"
            prefWidth="800.0" prefHeight="600.0">
    <VBox spacing="10.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0">
        <!-- Judul -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Manajemen Parsel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="createParsel" text="Tambah Parsel" onAction="#handleButtonClick"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 5px 10px"/>
        </HBox>


        <!-- TableView -->
        <TableView fx:id="parselTable" prefHeight="400.0">
            <columns>
                <TableColumn fx:id="IDColumn" text="ID" prefWidth="50"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                <TableColumn fx:id="dimensiColumn" text="Dimensi" prefWidth="150"/>
                <TableColumn fx:id="beratColumn" text="Berat" prefWidth="100"/>
                <TableColumn fx:id="jenisColumn" text="Jenis Barang" prefWidth="150"/>
            </columns>
        </TableView>

        <!-- Pagination -->
        <Pagination fx:id="pagination" maxPageIndicatorCount="10" />
    </VBox>
</AnchorPane>
